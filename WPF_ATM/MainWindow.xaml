<Window x:Class="WpfATMApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Банк" Height="300" Width="400">
    <Grid Margin="0,0,0,-6">
        <Label Content="Номер картки" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="CardNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,20,20,0" Width="200"/>

        <Label Content="PIN-код" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <PasswordBox x:Name="PinCodeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,60,20,0" Width="200"/>

        <Button Content="Увійти" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="120,100,0,0" Click="LoginButton_Click"/>
        <Button Content="Зареєструвати нову картку" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="120,140,0,0" Click="RegisterButton_Click"/>
        <Button Content="Вихід" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="120,180,0,0" Click="ExitButton_Click"/>
    </Grid>
</Window>
