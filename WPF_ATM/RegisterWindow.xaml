<Window x:Class="WpfATMApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="300" Width="400">
    <Grid>
        <Label Content="Ім'я" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="OwnerNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,20,20,0" Width="200"/>

        <Label Content="Номер картки" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <TextBox x:Name="CardNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,60,20,0" Width="200"/>

        <Label Content="PIN-код" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>
        <PasswordBox x:Name="PinCodeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,100,20,0" Width="200"/>

        <Label Content="Баланс" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0"/>
        <TextBox x:Name="BalanceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,140,20,0" Width="200"/>

        <Button Content="Зареєструвати" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="120,180,0,0" Click="RegisterButton_Click"/>
    </Grid>
</Window>
